    border-radius: 8px;
    padding: 8px 16px;
    font-weight: 500;
    font-size: 13px;
    min-height: 20px;
}

QPushButton:hover {
    background: #E5E7EB;
    border-color: #9CA3AF;
}

QPushButton:pressed {
    background: #D1D5DB;
}

QPushButton:disabled {
    background: #F9FAFB;
    color: #9CA3AF;
    border-color: #E5E7EB;
}

/* ===== FOCUS STATES ===== */
QPushButton:focus {
    outline: 2px solid rgba(255, 107, 53, 0.5);
    outline-offset: 2px;
}

QLineEdit:focus, QTextEdit:focus, QComboBox:focus {
    outline: none;
}

/* ===== TOOLTIPS ===== */
QToolTip {
    background: #1F2937;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 12px;
    font-weight: 500;
}

/* ===== MENU STYLES ===== */
QMenu {
    background: white;
    border: 1px solid #E5E7EB;
    border-radius: 8px;
    padding: 4px 0;
}

QMenu::item {
    background: transparent;
    color: #374151;
    padding: 8px 16px;
    margin: 0 4px;
    border-radius: 4px;
}

QMenu::item:selected {
    background: #F3F4F6;
    color: #FF6B35;
}

QMenu::separator {
    height: 1px;
    background: #E5E7EB;
    margin: 4px 8px;
}

/* ===== RESPONSIVE ADJUSTMENTS ===== */
QFrame#RecipeCard {
    min-width: 300px;
    max-width: 350px;
}

/* ===== ANIMATION SUPPORT ===== */
* {
    /* Enable smooth property changes */
    transition-duration: 0.2s;
    transition-timing-function: ease-out;
}

/* ===== END OF THEME ===== */
}

QFrame#RegisterDivider {
    background: #e2e8f0;
    border: none;
}

QLabel#RegisterSwitchText {
    font-size: 12px;
    color: #4a5568;
    font-weight: 500;
    background: transparent;
}

QPushButton#RegisterSwitchButton {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(240, 147, 251, 0.1),
        stop:1 rgba(245, 87, 108, 0.1)
    );
    border: 2px solid rgba(240, 147, 251, 0.3);
    color: #f093fb;
    font-size: 12px;
    font-weight: 700;
    padding: 6px 12px;
    border-radius: 6px;
}

QPushButton#RegisterSwitchButton:hover {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(240, 147, 251, 0.2),
        stop:1 rgba(245, 87, 108, 0.2)
    );
    border: 2px solid rgba(240, 147, 251, 0.5);
    color: #f5576c;
    transform: translateY(-1px);

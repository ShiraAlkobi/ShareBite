/* ===== MESSAGE LABEL ===== */
QLabel#LoginMessageLabel {
    background: rgba(239, 68, 68, 0.9);
    color: white;
    border-radius: 6px;
    padding: 10px 16px;
    font-size: 12px;
    font-weight: 600;
    margin: 8px 0px;
}

QLabel#LoginMessageLabel[error="false"] {
    background: rgba(16, 185, 129, 0.9);
    color: white;
}

/* ===== SCROLLBAR STYLING ===== */
QScrollBar:vertical {
    background: rgba(255, 255, 255, 0.1);
    width: 6px;
    border-radius: 3px;
}

QScrollBar::handle:vertical {
    background: rgba(102, 126, 234, 0.6);
    border-radius: 3px;
    min-height: 15px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(102, 126, 234, 0.8);
}

/* ===== LOADING INDICATOR ===== */
QFrame#LoginLoadingIndicator {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(102, 126, 234, 0.9),
        stop:1 rgba(240, 147, 251, 0.9)
    );
    border-radius: 25px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    min-width: 50px;
    max-width: 50px;
    min-height: 50px;
    max-height: 50px;
}

QLabel#LoginLoadingIcon {
    font-size: 18px;
    color: white;
    background: transparent;
}

/* ===== STACKED WIDGET ===== */
QStackedWidget#LoginStackedWidget {
    background: transparent;
    border: none;
}

/* ===== WINDOW BACKGROUND ===== */
QMainWindow {
    background-color: #ffffffff;
}

QDialog {
    background-color: #ffffffff;
}

/* ===== HOVER ANIMATIONS ===== */
QPushButton {
    transition: all 0.3s ease;
}

QFrame:hover {
    transition: all 0.2s ease;
}

QLineEdit:focus {
    transition: all 0.2s ease;
}

/* ===== ACCESSIBILITY FOCUS INDICATORS ===== */
QWidget:focus {
    outline: 2px solid #667eea;
    outline-offset: 1px;
}

/* ===== HIGH CONTRAST MODE SUPPORT ===== */
@media (prefers-contrast: high) {
    QLineEdit#LoginFormInput,
    QLineEdit#RegisterFormInput,
    QTextEdit#RegisterBioInput {
        border-width: 3px;
    }
    
    QPushButton#LoginSubmitButton,
    QPushButton#RegisterSubmitButton {
        border: 2px solid white;
    }
}


/* ShareBite Home View Theme - Vibrant Colorful Modern Design */

